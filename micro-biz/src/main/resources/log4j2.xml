<?xml version="1.0" encoding="UTF-8"?>
<!-- 日志级别优先级排序: OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL -->
<!-- status: 用于设置log4j2自身内部的信息输出,可以不设置,当设置成trace时,你会看到log4j2内部各种详细输出 -->
<!-- monitorInterval：Log4j能够自动检测修改配置文件和重新配置本身,设置间隔秒数 -->
<configuration status="WARN" monitorInterval="1800">
    <Properties>
        <property name="BASE_PATH">./logs</property>
        <property name="LOG_FILE_SIZE">50MB</property>
        <!-- %L为行号显示,影响日志输出性能。http://logging.apache.org/log4j/2.x/manual/layouts.html#PatternLayout -->
        <property name="CONSOLE_LOG_PATTERN">[%d{yyyy-MM-dd'T'HH:mm:ss.SSS}] [%highlight{%-5level}] [%yellow{%L}]%notEmpty{ [%magenta{%X{X-Trace-ID}}]} [%blue{%t}] [%highlight{%c}] - %msg%n%throwable</property>
        <!-- 不带行号输出(行号显示会影响日志输出性能) -->
        <property name="LOG_PATTERN">[%d{yyyy-MM-dd'T'HH:mm:ss.SSS}] [%-5level]%notEmpty{ [%X{X-Trace-ID}]} [%t] [%c] - %msg%n%throwable</property>
    </Properties>

    <appenders>
        <!-- 控制台日志 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
            <!-- 控制台只输出level及以上级别的信息（onMatch），其它的直接拒绝（onMismatch）-->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- 应用日志 -->
        <RollingFile name="APP_LOG" fileName="${BASE_PATH}/app.log"
                     filePattern="${BASE_PATH}/%d{yyyy-MM-dd}/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_SIZE}"/>
                <TimeBasedTriggeringPolicy interval="24" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="50">
                <Delete basePath="${BASE_PATH}" maxDepth="2">
                    <IfFileName glob="*/app-*.log.gz"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <!-- 错误日志 -->
        <RollingFile name="ERROR_LOG" fileName="${BASE_PATH}/error.log"
                     filePattern="${BASE_PATH}/%d{yyyy-MM-dd}/error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <SizeBasedTriggeringPolicy size="${LOG_FILE_SIZE}"/>
            <DefaultRolloverStrategy max="50">
                <Delete basePath="${BASE_PATH}" maxDepth="2">
                    <IfFileName glob="*/error-*.log.gz"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
            <Filters>
                <ThresholdFilter level="FATAL" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
    </appenders>

    <asyncLogger name="cn.micro" level="INFO" includeLocation="true">
        <AppenderRef ref="APP_LOG"/>
    </asyncLogger>
    <asyncLogger name="cn.micro" level="ERROR" includeLocation="true">
        <AppenderRef ref="ERROR_LOG"/>
    </asyncLogger>

    <loggers>
        <!-- 过滤第三方应用日志 -->
        <logger name="org.mybatis" level="WARN"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="springfox.documentation" level="OFF"/>
        <logger name="com.ulisesbocchio.jasyptspringboot" level="WARN"/>
        <!-- 屏蔽重复日志: o.a.c.c.C.[.[.[/].[dispatcherServlet] -->
        <logger name="org.apache.catalina.core.ContainerBase" level="OFF"/>
        <logger name="org.mybatis.spring.mapper.ClassPathMapperScanner" level="ERROR"/>

        <!-- DEBUG: print SQL、TRACE: SQL+ResultSet-->
        <logger name="cn.micro.biz.mapper" level="DEBUG"/>
        <logger name="cn.micro.biz.mapper.member.IRoleMapper.selectList" level="INFO"/>
        <logger name="cn.micro.biz.mapper.member.IRolePermissionMapper.selectList" level="INFO"/>
        <logger name="cn.micro.biz.mapper.member.IPermissionMapper.selectList" level="INFO"/>
        <logger name="cn.micro.biz.commons.mybatis.extension.TraceExpendInterceptor" level="DEBUG"/>

        <root level="INFO" includeLocation="true">
            <appender-ref ref="Console"/>
            <appender-ref ref="APP_LOG"/>
            <appender-ref ref="ERROR_LOG"/>
        </root>
    </loggers>

</configuration>